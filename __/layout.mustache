{{% BLOCKS }}
<!DOCTYPE html>
<html lang="{{lang}}">
	<head>
		<title>{{$title}}{{/title}} - Triangelos</title>

		<base href="{{#url}}/{{/url}}" />
		<link rel="canonical" href="{{#url}}/{{this}}{{/url}}"/>

		<meta name="viewport" content="width=device-width, initial-scale=1" />
		{{#css}}
		<link rel="stylesheet" type="text/css" href="{{.}}">
		{{/css}}

		{{#js}}
		<script type="text/javascript" src="{{.}}"></script>
		{{/js}}
		<script>
			var Site = {Url: {Base: '{{url}}', Current: '{{this}}'}, Lang: '{{lang}}'};
		</script>

	</head>
	<body>
		<header id="header">
			{{> header}}
		</header>

		<article id="content">
			<h1>{{$title}}{{/title}}</h1>
			{{$content}}{{/content}}
		</article>

		<footer id="footer">
			{{> footer}}
		</footer>
	</body>
</html>
