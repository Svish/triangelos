{{% BLOCKS }}
{{< layout }}
{{$ TITLE }}{{#_}}Music{{/_}}{{/ TITLE }}
{{$ title }}{{#_}}Music{{/_}}<a href="javascript:void(0)" class="has-details right" data-details="help">{{#svg}}help{{/svg}}</a>{{/ title }}

{{$ content}}

<p><b>// TODO: Buy buttons</b>

{{#music.albums}}
<hr>
<article class="album">
	<h1><a href="music/{{url}}">{{album}}</a>
		<span>{{year}}</span>
	</h1>
	<ol class="tracks">
		{{#tracks}}
		<li><span class="time">{{time}}</span> <a href="stream/{{url}}" type="{{mime}}">{{title}}</a>
		{{/tracks}}
	</ol>
	<p>
		<a class="frame" href="music/{{url}}">
			<img alt="{{#_}}Album cover{{/_}}" src="t/250x250/{{cover}}">
		</a>
	</p>
</article>
{{/music.albums}}

{{>jplayer}}



<div class="details" data-details="help">
	<article>
		<h1>{{#_}}Music{{/_}}</h1>
		{{{markdown}}}
		{{>close-link}}
	</article>
</div>


{{/ content}}
{{/ layout }}
