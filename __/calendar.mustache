{{% BLOCKS }}
{{< layout }}
{{$ title }}{{#_}}title/Calendar{{/_}}{{/ title }}

{{$ content}}


<h1>{{#_}}title/Calendar{{/_}}</h1>


{{#calendar.listing}}

	<h2>{{name|_}}</h2>

	<table class="calendar" width="100%">
		<col>
		<col>
		<col>
		<col>
		<col>
		<col>
		<col>
		<thead>
			<tr>
				<th>{{#_}}Sunday{{/_}}</th>
				<th>{{#_}}Monday{{/_}}</th>
				<th>{{#_}}Tuesday{{/_}}</th>
				<th>{{#_}}Wednesday{{/_}}</th>
				<th>{{#_}}Thursday{{/_}}</th>
				<th>{{#_}}Friday{{/_}}</th>
				<th>{{#_}}Saturday{{/_}}</th>
			</tr>
		</thead>
		<tbody class="checkered">
		{{#weeks}}
		<tr data-week="{{week}}" class="{{#past}}past{{/past}}">
			{{#days}}
			{{^day}}
			<td class="empty"></td>
			{{/day}}
			{{#day}}
			<td data-day="{{day}}" data-week="{{week}}" data-date="{{iso}}" data-name="{{name|_}}" class="{{#isCurrent}}current{{/isCurrent}}">{{#events}}

				<div class="event {{status}} {{transp}} {{continued}} {{private}} has-details" data-details="{{id}}">
					{{#start_time}}<time datetime="{{start_w3c}}">{{start_time | timeTrim}}</time>{{/start_time}}
					<div class="summary">{{summary|_}}</div>
				</div>
				{{^continued}}
				<div class="details" data-details="{{id}}">
					<article>
						<h1>{{summary|_}}{{>close-link}}</h1>
						<p class="subtitle">
							<time datetime="{{start_w3c}}">{{start_date|_}} {{start_time}}</time>
							{{#end_w3c}}
							<time datetime="{{end_w3c}}"> â€“ {{end_date|_}} {{end_time}}</time>
							{{/end_w3c}}
						</p>

						{{#location}}
							<address>{{{location}}}</address>
						{{/location}}
						
						{{{description}}}
					</article>
				</div>
				{{/continued}}

				{{/events}}</td>
			{{/day}}
			{{/days}}
		</tr>
		{{/weeks}}
	</table>


{{/calendar.listing}}

<p>
	<a class="badge" data-name="iCal" href="calendar.ics">{{#_}}Subscribe to calendar{{/_}}</a>
</p>



<script>
$(function()
{
	// Mark current day and week
	var today = new Date().toISOString().split('T')[0];
	$('[data-date="'+today+'"]', '.calendar')
		.addClass('current')
		.closest('tr')
		.addClass('current');
});
</script>



